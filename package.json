{
	"name": "react-app",
	"version": "3.0.3",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
	"devDependencies": {
		"eslint": "4.19.1",
		"husky": "^0.14.3",
		"lerna": "^2.9.1",
		"lint-staged": "^7.0.5",
		"prettier": "^1.12.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "prettier --write",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "scripts": {
    "precommit": "lint-staged"
  }
}
